extends ../layout

block content
    h3 Authors
    a.secondary(href='/authors/add') Add New Author
    table
        thead
            tr
                th First
                th Last
                th DOB
                th
        tbody
            each author in authors
                tr
                    td=author.first_name
                    td=author.last_name
                    td=author.dob
                    td
                        a.secondary(href=`/authors/profile/${author.id}`) View Author