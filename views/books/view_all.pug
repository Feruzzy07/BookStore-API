extends ../layout

block content
    h3 Books
    a.secondary(href='/books/add') Add New Book
    table
        thead
            tr
                th Book Image
                th Book title
                th Publisher
                th Genre
                th # of Pages
                th Description
            tbody
                each book in books
                    tr
                        td
                            a(href=`/books/profile/${book.id}`)
                                img(src=book.cover_image)
                        td=book.title
                        td=book.publisher
                        td=book.genre
                        td=book.pages
                        td=book.description
                        td
                            a.secondary(href=`/books/profile/${book.id}`) View Book